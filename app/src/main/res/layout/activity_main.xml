<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contener"
    tools:context=".MainActivity"
    android:id="@+id/coor">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizobtal20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.20" />

        <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizobtal36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizobtal52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.52" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizobtal68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.68" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizobtal84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.84" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizobtal9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09" />

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="1"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal52"
            app:layout_constraintEnd_toEndOf="@id/vertical25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizobtal36"

            />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="2"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal52"
            app:layout_constraintEnd_toEndOf="@id/vertical50"
            app:layout_constraintStart_toStartOf="@id/vertical25"
            app:layout_constraintTop_toTopOf="@id/horizobtal36"

            />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="3"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal52"
            app:layout_constraintEnd_toEndOf="@id/vertical75"
            app:layout_constraintStart_toStartOf="@id/vertical50"
            app:layout_constraintTop_toTopOf="@id/horizobtal36"/>

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="4"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal68"
            app:layout_constraintEnd_toEndOf="@id/vertical25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizobtal52" />

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="5"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal68"
            app:layout_constraintEnd_toEndOf="@id/vertical50"
            app:layout_constraintStart_toStartOf="@id/vertical25"
            app:layout_constraintTop_toTopOf="@id/horizobtal52" />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="6"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal68"
            app:layout_constraintEnd_toEndOf="@id/vertical75"
            app:layout_constraintStart_toStartOf="@id/vertical50"
            app:layout_constraintTop_toTopOf="@id/horizobtal52" />

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="7"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal84"
            app:layout_constraintEnd_toEndOf="@id/vertical25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizobtal68" />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="8"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal84"
            app:layout_constraintEnd_toEndOf="@id/vertical50"
            app:layout_constraintStart_toStartOf="@id/vertical25"
            app:layout_constraintTop_toTopOf="@id/horizobtal68" />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="9"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal84"
            app:layout_constraintEnd_toEndOf="@id/vertical75"
            app:layout_constraintStart_toStartOf="@id/vertical50"
            app:layout_constraintTop_toTopOf="@id/horizobtal68" />

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="0"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/vertical50"
            app:layout_constraintStart_toStartOf="@id/vertical25"
            app:layout_constraintTop_toTopOf="@id/horizobtal84" />

        <Button
            android:id="@+id/dota"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text=","
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/vertical25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizobtal84" />


        <Button
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="%"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/vertical75"
            app:layout_constraintStart_toStartOf="@id/vertical50"
            app:layout_constraintTop_toTopOf="@id/horizobtal84" />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="+"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal36"
            app:layout_constraintEnd_toEndOf="@id/vertical25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizobtal20" />

        <Button
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:background="@drawable/custom_button"
        android:text="-"
        android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal36"
            app:layout_constraintEnd_toEndOf="@id/vertical50"
            app:layout_constraintStart_toStartOf="@id/vertical25"
            app:layout_constraintTop_toTopOf="@id/horizobtal20" />

        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="*"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal36"
            app:layout_constraintEnd_toEndOf="@id/vertical75"
            app:layout_constraintStart_toStartOf="@id/vertical50"
            app:layout_constraintTop_toTopOf="@id/horizobtal20" />

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:text="/"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal36"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertical75"
            app:layout_constraintTop_toTopOf="@id/horizobtal20" />

        <Button
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_result_button"
            android:text="="
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertical75"
            app:layout_constraintTop_toTopOf="@id/horizobtal68" />

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_cancel_button"
            android:text="C"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal52"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertical75"
            app:layout_constraintTop_toTopOf="@id/horizobtal36" />

        <ImageButton
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="@drawable/custom_button"
            android:src="@drawable/ic_backspace_black_24dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal68"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/vertical75"
            app:layout_constraintTop_toTopOf="@id/horizobtal52" />

        <TextView
            android:id="@+id/result_panel"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:background="@drawable/custom_label"
            android:gravity="end|bottom"
            android:textSize="68sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/top_ressum"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="end"
            android:textColor="#817F7F"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@id/horizobtal9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingEnd="10dp"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>