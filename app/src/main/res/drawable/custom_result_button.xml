<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disable state. -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="90" android:endColor="#CEEAED" android:startColor="#E4ECED" android:type="linear" />
            <stroke android:width="1dp" android:color="#000000"></stroke>
        </shape>
    </item>

    <!--released state. -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="90" android:endColor="#14BACC" android:startColor="#6BC2CD" android:type="linear" />
            <stroke android:width="1dp" android:color="#000000"></stroke>
        </shape>
    </item>

    <!--pressed state. -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="90" android:endColor="#70E8F4" android:startColor="#84C4CC" android:type="linear" />
            <stroke android:width="1dp" android:color="#000000"></stroke>
        </shape>
    </item>
</selector>